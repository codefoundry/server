<VirtualHost *:8001>
  ServerName <%= @params[:server_name] %>

  <Location />
    DAV svn

    SVNParentPath <%= File.join( node[:codefoundry][:repo_dir], 'svn' ) %>
    # enable repository listing; this vhost is only accessed locally
    SVNListParentPath on

    # restrict this vhost to access from localhost only
    # this will need to be changed if SVN and CF and hosted separately
    Deny from all
    Allow from 127
  </Location>
</VirtualHost>
